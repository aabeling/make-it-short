{
  "manifest_version": 2,
  "name": "make-it-short",
  "version": "0.0.3",

  "description": "Provides a button to start and stop a timer indicating speaking time.",

  "icons": {
    "48": "icons/timer-48.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },

  "permissions": [
    "activeTab",
    "storage"
  ],

  "browser_action": {
    "default_icon": {
      "16": "icons/timer-16.png",
      "32": "icons/timer-32.png"
    }
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "make-it-short-sd@banapple.de"
    }
  }
  
}

